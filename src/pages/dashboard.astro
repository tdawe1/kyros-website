---
// Dashboard page with modern UI components
import Layout from '../layouts/Layout.astro';
---

<Layout title="Dashboard - kyros" description="Analytics and insights dashboard">
  <div class="dashboard-container">
    <div class="dashboard-wrapper">
      <!-- Sidebar Navigation -->
      <aside class="sidebar">
        <div class="sidebar-header">
          <h2>kyros.Sync</h2>
          <div class="version-section">
            <span class="version">v2.1</span>
            <a href="#changelog" class="changelog-link">changelog</a>
          </div>
        </div>
        
        <nav class="sidebar-nav">
          <a href="#overview" class="nav-item active">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="7" height="7"></rect>
              <rect x="14" y="3" width="7" height="7"></rect>
              <rect x="14" y="14" width="7" height="7"></rect>
              <rect x="3" y="14" width="7" height="7"></rect>
            </svg>
            Overview
          </a>
          <a href="#analytics" class="nav-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 3v18h18"></path>
              <path d="M18.7 8l-5.1 5.2-2.8-2.7L7 14.3"></path>
            </svg>
            Analytics
          </a>
          <a href="#inventory" class="nav-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 7l-8-4-8 4"></path>
              <path d="M6 10v6l6 3 6-3v-6"></path>
            </svg>
            Inventory
          </a>
          <a href="#reports" class="nav-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14,2 14,8 20,8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10,9 9,9 8,9"></polyline>
            </svg>
            Reports
          </a>
          <div class="nav-divider"></div>
          <a href="#portal" class="nav-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
              <line x1="8" y1="21" x2="16" y2="21"></line>
              <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
            Portal
          </a>
          <a href="#api" class="nav-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
              <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
            </svg>
            API
          </a>
          <a href="#documentation" class="nav-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14,2 14,8 20,8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10,9 9,9 8,9"></polyline>
            </svg>
            Documentation
          </a>
          <a href="#integrations" class="nav-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M8 3H5a2 2 0 0 0-2 2v3"></path>
              <path d="M21 8V5a2 2 0 0 0-2-2h-3"></path>
              <path d="M3 16v3a2 2 0 0 0 2 2h3"></path>
              <path d="M16 21h3a2 2 0 0 0 2-2v-3"></path>
            </svg>
            Integrations
          </a>
          <a href="#settings" class="nav-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="3"></circle>
              <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
            </svg>
            Settings
          </a>
        </nav>
        
        <div class="sidebar-footer">
          <div class="user-info">
            <div class="avatar">JD</div>
            <div class="user-details">
              <p class="user-name">John Doe</p>
              <p class="user-role">Admin</p>
            </div>
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <!-- Header -->
        <header class="dashboard-header">
                  <div class="header-left">
          <h1>Live View: Logistics Agent</h1>
        </div>
          <div class="header-right">
                      <div class="date-picker">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 7l-8-4-8 4"></path>
              <path d="M6 10v6l6 3 6-3v-6"></path>
            </svg>
            <span>Agent Selector</span>
          </div>
            <button class="customize-btn">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 20h9"></path>
                <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
              </svg>
              <span>Customise</span>
            </button>
            <button class="refresh-btn">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="23,4 23,10 17,10"></polyline>
                <polyline points="1,20 1,14 7,14"></polyline>
                <path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"></path>
              </svg>
            </button>
            <button class="new-workflow-btn">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="16"></line>
                <line x1="8" y1="12" x2="16" y2="12"></line>
              </svg>
              <span>New Workflow</span>
            </button>
          </div>
        </header>

        <!-- Menu Header -->
        <section class="menu-header">
          <div class="agent-status-bar">
            <div class="status-section">
              <div class="status-indicator active"></div>
              <span class="status-text">Agent Active</span>
            </div>
            <div class="tasks-section">
              <span class="section-label">Tasks</span>
              <div class="status-metrics">
                <div class="metric-group">
                  <span class="metric-label">Current:</span>
                  <span class="status-metric">Route Optimization</span>
                </div>
                <div class="metric-group">
                  <span class="metric-label">Time:</span>
                  <span class="status-metric">2.3s</span>
                </div>
                <div class="metric-group">
                  <span class="metric-label">Completed:</span>
                  <span class="status-metric">1,247</span>
                </div>
              </div>
            </div>
            <div class="chart-controls">
              <button class="chart-btn active">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="5,3 19,12 5,21"></polygon>
                </svg>
              </button>
              <button class="chart-btn">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="6" y="4" width="4" height="16"></rect>
                  <rect x="14" y="4" width="4" height="16"></rect>
                </svg>
              </button>
              <button class="chart-btn">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              </button>
            </div>
          </div>
        </section>

        <!-- Charts Section -->
        <section class="charts-section">
          <div class="chart-container large">
            <div class="chart-content">
              <div class="live-agent-content">
                <div class="empty-space"></div>
                <div class="activity-stream">
                  <div class="activity-item">
                    <span class="activity-time">12:34:21</span>
                    <span class="activity-text">Optimizing delivery route for order #12345</span>
                  </div>
                  <div class="activity-item">
                    <span class="activity-time">12:34:18</span>
                    <span class="activity-text">Calculating fuel efficiency for vehicle fleet</span>
                  </div>
                  <div class="activity-item">
                    <span class="activity-time">12:34:15</span>
                    <span class="activity-text">Updating inventory levels for warehouse A</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Metrics Cards -->
        <section class="metrics-grid">
          <div class="metric-card">
            <div class="metric-header">
              <h3>Total Orders Delivered</h3>
              <span class="trend positive">+12.5%</span>
            </div>
            <div class="metric-value">£124,563</div>
            <div class="metric-chart">
              <div class="chart-bar" style="height: 60%"></div>
              <div class="chart-bar" style="height: 80%"></div>
              <div class="chart-bar" style="height: 45%"></div>
              <div class="chart-bar" style="height: 90%"></div>
              <div class="chart-bar" style="height: 75%"></div>
              <div class="chart-bar" style="height: 85%"></div>
              <div class="chart-bar" style="height: 95%"></div>
            </div>
          </div>

          <div class="metric-card">
            <div class="metric-header">
              <h3>Revenue Trend</h3>
              <span class="trend positive">+8.2%</span>
            </div>
            <div class="metric-chart">
              <div class="hybrid-chart">
                <div class="bar-container">
                  <div class="chart-bar" style="height: 60%"></div>
                  <div class="chart-bar" style="height: 80%"></div>
                  <div class="chart-bar" style="height: 45%"></div>
                  <div class="chart-bar" style="height: 90%"></div>
                  <div class="chart-bar" style="height: 75%"></div>
                  <div class="chart-bar" style="height: 85%"></div>
                  <div class="chart-bar" style="height: 95%"></div>
                </div>
                <svg class="line-overlay" width="100%" height="100%" viewBox="0 0 100 40">
                  <defs>
                    <linearGradient id="revenueGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                      <stop offset="0%" style="stop-color:var(--accent-purple);stop-opacity:0.8" />
                      <stop offset="100%" style="stop-color:var(--accent-orange);stop-opacity:0.8" />
                    </linearGradient>
                  </defs>
                  <path d="M7,24 L21,16 L35,22 L49,12 L63,18 L77,14 L93,8" 
                        stroke="url(#revenueGradient)" 
                        stroke-width="2" 
                        fill="none" 
                        class="trend-line"/>
                </svg>
              </div>
            </div>
          </div>

          <div class="metric-card">
            <div class="metric-header">
              <h3>Time Saved MTD</h3>
              <span class="trend positive">+12.5%</span>
            </div>
            <div class="metric-chart">
              <div class="mini-graph">
                <svg width="100%" height="40" viewBox="0 0 100 40" class="time-saved-graph">
                  <defs>
                    <linearGradient id="timeGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                      <stop offset="0%" style="stop-color:var(--accent-blue);stop-opacity:0.8" />
                      <stop offset="100%" style="stop-color:var(--accent-purple);stop-opacity:0.3" />
                    </linearGradient>
                  </defs>
                  <path d="M0,35 L10,30 L20,25 L30,20 L40,15 L50,12 L60,8 L70,5 L80,3 L90,2 L100,1" 
                        stroke="url(#timeGradient)" 
                        stroke-width="2" 
                        fill="none" 
                        class="graph-line"/>
                  <path d="M0,35 L10,30 L20,25 L30,20 L40,15 L50,12 L60,8 L70,5 L80,3 L90,2 L100,1 L100,40 L0,40 Z" 
                        fill="url(#timeGradient)" 
                        opacity="0.2" 
                        class="graph-area"/>
                </svg>
              </div>
              <div class="chart-progress" style="--progress: 78%"></div>
              <div class="metric-value time-saved-value">47.2 hrs</div>
            </div>
          </div>
        </section>

        <!-- Recent Activity Table -->
        <section class="table-section">
          <div class="table-header">
            <div class="menu-tabs">
              <button class="menu-tab">Workflows</button>
              <button class="menu-tab">Credentials</button>
              <button class="menu-tab active">Executions</button>
            </div>
            <button class="view-all-btn">Logs</button>
          </div>
          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Agent</th>
                  <th>Action</th>
                  <th>Token</th>
                  <th>Status</th>
                  <th>Time</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <div class="user-cell">
                      <div class="user-avatar">RT</div>
                      <div class="user-info">
                        <p class="user-name">RouteOpt Agent</p>
                        <p class="user-email">dev-route-001</p>
                      </div>
                    </div>
                  </td>
                  <td>Route Calculation</td>
                  <td>Distance Matrix</td>
                  <td><span class="status success">Success</span></td>
                  <td>2 min ago</td>
                </tr>
                <tr>
                  <td>
                    <div class="user-cell">
                      <div class="user-avatar">IV</div>
                      <div class="user-info">
                        <p class="user-name">Inventory Validator</p>
                        <p class="user-email">dev-inv-002</p>
                      </div>
                    </div>
                  </td>
                  <td>Stock Check</td>
                  <td>Warehouse A</td>
                  <td><span class="status success">Success</span></td>
                  <td>15 min ago</td>
                </tr>
                <tr>
                  <td>
                    <div class="user-cell">
                      <div class="user-avatar">FD</div>
                      <div class="user-info">
                        <p class="user-name">Freight Dispatch</p>
                        <p class="user-email">dev-freight-003</p>
                      </div>
                    </div>
                  </td>
                  <td>Shipment Init</td>
                  <td>Tracking ID</td>
                  <td><span class="status pending">Pending</span></td>
                  <td>1 hour ago</td>
                </tr>
                <tr>
                  <td>
                    <div class="user-cell">
                      <div class="user-avatar">QG</div>
                      <div class="user-info">
                        <p class="user-name">QuoteGen Domestic</p>
                        <p class="user-email">dev-quote-004</p>
                      </div>
                    </div>
                  </td>
                  <td>API Call</td>
                  <td>Auth Token</td>
                  <td><span class="status success">Success</span></td>
                  <td>2 hours ago</td>
                </tr>
              </tbody>
            </table>
          </div>
        </section>
      </main>
    </div>
  </div>
</Layout>

<style>
  .dashboard-container {
    display: flex;
    min-height: 100vh;
    background-color: var(--bg-light);
    padding: 2rem;
  }

  .dashboard-wrapper {
    display: flex;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    background: white;
    background-image: 
      radial-gradient(circle at 25% 25%, rgba(0, 123, 255, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, rgba(139, 92, 246, 0.03) 0%, transparent 50%),
      linear-gradient(45deg, transparent 48%, rgba(0, 123, 255, 0.02) 50%, transparent 52%),
      linear-gradient(-45deg, transparent 48%, rgba(139, 92, 246, 0.02) 50%, transparent 52%);
    background-size: 200px 200px, 200px 200px, 40px 40px, 40px 40px;
    background-position: 0 0, 100px 100px, 0 0, 0 0;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border: 1px solid #e5e7eb;
  }

  /* Sidebar Styles */
  .sidebar {
    width: 280px;
    background: #f1f5f9;
    border-right: 1px solid #e5e7eb;
    display: flex;
    flex-direction: column;
    height: 100%;
    overflow-y: auto;
  }

  .sidebar-header {
    padding: 2rem 1.5rem 1rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .sidebar-header h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-black);
    margin: 0;
  }

  .version-section {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .version {
    font-size: 0.75rem;
    color: #6b7280;
    background: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    display: inline-block;
  }

  .changelog-link {
    font-size: 0.75rem;
    color: var(--accent-blue);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
    background: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .changelog-link:hover {
    color: var(--electric-blue-dark);
  }

  .sidebar-nav {
    padding: 1rem 0;
    flex: 1;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    color: #6b7280;
    text-decoration: none;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .nav-item:hover {
    background: #f9fafb;
    color: var(--text-black);
  }

  .nav-item.active {
    background: linear-gradient(135deg, var(--accent-blue), var(--accent-purple));
    color: white;
    box-shadow: 0 2px 8px rgba(0, 123, 255, 0.3);
  }

  .nav-divider {
    height: 1px;
    background: #e5e7eb;
    margin: 0.5rem 1.5rem;
  }

  .sidebar-footer {
    padding: 1rem 1.5rem;
    border-top: 1px solid #e5e7eb;
  }

  .user-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .avatar {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--accent-blue), var(--electric-blue-light));
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 0.875rem;
    box-shadow: 0 2px 8px rgba(0, 123, 255, 0.3);
  }

  .user-details {
    flex: 1;
  }

  .user-name {
    font-weight: 600;
    color: var(--text-black);
    margin: 0;
    font-size: 0.875rem;
  }

  .user-role {
    color: #6b7280;
    margin: 0;
    font-size: 0.75rem;
  }

  /* Main Content Styles */
  .main-content {
    flex: 1;
    padding: 2rem;
  }

  /* Header Styles */
  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .header-left h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #374151;
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.025em;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .date-picker {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    color: #6b7280;
    font-size: 0.875rem;
  }

  .customize-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    color: #6b7280;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .customize-btn:hover {
    background: #f9fafb;
    color: var(--text-black);
  }

  .refresh-btn {
    width: 40px;
    height: 40px;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6b7280;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .refresh-btn:hover {
    background: #f9fafb;
    color: var(--text-black);
  }

  .new-workflow-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--accent-blue);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .new-workflow-btn:hover {
    background: var(--electric-blue-dark);
  }

  /* Menu Header */
  .menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0;
    padding: 1.5rem 1.5rem 0.75rem 1.5rem;
    background: white;
