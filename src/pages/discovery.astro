---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Let's Talk Automation - kyros">
  <div class="contact-page">
    <header class="contact-header">
      <div class="section-container">
        <div class="header-content">
          <div class="contact-tag">Contact us</div>
          <h1>Let's Talk Automation</h1>
          <p class="subtitle">Drop us a line or book a demo, your ops, powered by kyros.Flow.</p>
        </div>
      </div>
    </header>

    <section class="contact-content">
      <div class="section-container">
        <div class="content-grid">
          <div class="left-column">
            <div class="info-section">
              <p class="intro-text">Our team is highly dedicated to help you with your automation queries. Just drop us a line through the form & our team will be in touch with you within the same day.</p>
              
              <div class="testimonial-card">
                <div class="stars">â˜…â˜…â˜…â˜…â˜…</div>
                <p class="testimonial-text">"kyros helped me automate our quote generation process, saving us 15+ hours weekly and reducing errors by 90%."</p>
                <div class="testimonial-author">
                  <div class="author-avatar">ðŸ‘¤</div>
                  <div class="author-info">
                    <strong>Sarah Chen</strong>
                    <span>Operations Director, TechFlow</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="right-column">
            <div class="contact-form-card">
              <form class="contact-form" id="contactForm">
                <div class="form-group">
                  <label for="inquiry-type">What can we help you with?</label>
                  <select id="inquiry-type" name="inquiry-type" required>
                    <option value="">Select inquiry type</option>
                    <option value="sales">Sales Inquiry</option>
                    <option value="support">Support Request</option>
                    <option value="demo">Demo Setup</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="name">Full Name *</label>
                  <input type="text" id="name" name="name" placeholder="Full name" required>
                </div>
                
                <div class="form-group">
                  <label for="company">Company Name *</label>
                  <input type="text" id="company" name="company" placeholder="Your company" required>
                </div>
                
                <div class="form-group">
                  <label for="email">Email Address *</label>
                  <input type="email" id="email" name="email" placeholder="Enter your email" required>
                </div>
                
                <div class="form-group">
                  <label for="phone">Phone Number</label>
                  <input type="tel" id="phone" name="phone" placeholder="+1 (000) 000-0000">
                </div>
                
                <div class="form-group">
                  <label for="message">Tell us what you'd like to automate</label>
                  <textarea id="message" name="message" rows="4" placeholder="Provide any details regarding your automation needs..."></textarea>
                </div>
                
                <div class="form-group checkbox-group">
                  <label class="checkbox-container">
                    <input type="checkbox" id="privacy" name="privacy" required>
                    <span class="checkmark"></span>
                    By reaching out to us, you agree to our <a href="#" class="privacy-link">Privacy Policy</a>.
                  </label>
                </div>
                
                <button type="submit" class="submit-btn" id="submitBtn">
                  <span class="btn-text">Send Request</span>
                  <span class="btn-loading" style="display: none;">Sending...</span>
                </button>
                
                <div id="formMessage" class="form-message" style="display: none;"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="support-section">
      <div class="section-container">
        <h2>For other dedicated support</h2>
        <div class="support-cards">
          <div class="support-card">
            <div class="support-icon">ðŸ“§</div>
            <h3>Email Support</h3>
            <p>For any general inquiries, please write to us directly.</p>
            <a href="mailto:hello@kyros.solutions" class="support-btn">hello@kyros.solutions</a>
          </div>
          
          <div class="support-card">
            <div class="support-icon">ðŸ“…</div>
            <h3>Direct Meeting</h3>
            <p>For priority support, you can schedule a meeting with our team.</p>
            <a href="/discovery" class="support-btn">Schedule a Meeting</a>
          </div>
        </div>
      </div>
    </section>

    <section class="trust-section">
      <div class="section-container">
        <div class="trust-stats">
          <div class="stat-item">
            <div class="stat-number">200%+</div>
            <div class="stat-label">ROI</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">10+</div>
            <div class="stat-label">Hours Saved Weekly</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">99%</div>
            <div class="stat-label">Error Reduction</div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .contact-page {
    background-color: var(--bg-light);
  }

  .contact-header {
    background: white;
    color: var(--text-dark);
    padding: 4rem 0;
    text-align: center;
  }

  .contact-tag {
    display: inline-block;
    background: linear-gradient(135deg, var(--accent-purple), var(--accent-orange));
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .header-content h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
    color: var(--text-dark);
  }

  .subtitle {
    font-size: 1.2rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .contact-content {
    padding: 4rem 0;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }

  .info-section {
    padding: 2rem;
  }

  .intro-text {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--text-dark);
    margin-bottom: 2rem;
  }

  .testimonial-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border-left: 4px solid var(--accent-blue);
  }

  .stars {
    color: #fbbf24;
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .testimonial-text {
    font-style: italic;
    color: var(--text-dark);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author-avatar {
    width: 40px;
    height: 40px;
    background: var(--accent-blue);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.2rem;
  }

  .author-info strong {
    display: block;
    color: var(--text-dark);
    font-weight: 600;
  }

  .author-info span {
    color: #6b7280;
    font-size: 0.9rem;
  }

  .contact-form-card {
    background: white;
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }
    font-size: 2.625rem; /* 5% larger: 2.5rem to 2.625rem */
    flex-shrink: 0;
  }

  .benefit-text h3 {
    font-size: 1.575rem; /* 5% larger: 1.5rem to 1.575rem */
    margin-bottom: 0.525rem; /* 5% larger: 0.5rem to 0.525rem */
    color: var(--text-dark);
  }

  .benefit-text p {
    color: var(--text-dark);
    line-height: 1.6;
    margin: 0;
  }

  .booking-form {
    background: white;
    padding: 3.15rem; /* 5% larger: 3rem to 3.15rem */
    border-radius: 12.6px; /* 5% larger: 12px to 12.6px */
    box-shadow: 0 6.3px 31.5px rgba(0, 0, 0, 0.1);
  }

  .booking-form h2 {
    font-size: 2.625rem; /* 5% larger: 2.5rem to 2.625rem */
    margin-bottom: 1.05rem; /* 5% larger: 1rem to 1.05rem */
    color: var(--text-dark);
  }

  .form-subtitle {
    color: var(--text-dark);
    margin-bottom: 2.625rem; /* 5% larger: 2.5rem to 2.625rem */
    font-size: 1.155rem; /* 5% larger: 1.1rem to 1.155rem */
  }

  .form-group {
    margin-bottom: 1.575rem; /* 5% larger: 1.5rem to 1.575rem */
  }

  .form-group label {
    display: block;
    margin-bottom: 0.525rem; /* 5% larger: 0.5rem to 0.525rem */
    font-weight: 600;
    color: var(--text-dark);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.7875rem; /* 5% larger: 0.75rem to 0.7875rem */
    border: 2px solid #e9ecef;
    border-radius: 8.4px; /* 5% larger: 8px to 8.4px */
    font-size: 1.05rem; /* 5% larger: 1rem to 1.05rem */
    transition: border-color 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--accent-blue);
  }

  .submit-btn {
    width: 100%;
    background: linear-gradient(135deg, var(--accent-blue) 0%, var(--electric-blue-dark) 100%);
    color: white;
    padding: 1.26rem 2.52rem; /* 5% larger: 1.2rem 2.4rem to 1.26rem 2.52rem */
    border: none;
    border-radius: 8.4px; /* 5% larger: 8px to 8.4px */
    font-size: 1.26rem; /* 5% larger: 1.2rem to 1.26rem */
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4.2px 15.75px rgba(0, 123, 255, 0.3);
  }

  .submit-btn:hover:not(:disabled) {
    transform: translateY(-2.1px);
    box-shadow: 0 6.3px 21px rgba(0, 123, 255, 0.4);
  }

  .submit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
  }

  .form-message {
    margin-top: 1.575rem; /* 5% larger: 1.5rem to 1.575rem */
    padding: 1.05rem; /* 5% larger: 1rem to 1.05rem */
    border-radius: 8.4px; /* 5% larger: 8px to 8.4px */
    font-weight: 500;
    text-align: center;
  }

  .form-message.success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .form-message.error {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  .form-footer {
    margin-top: 2.625rem; /* 5% larger: 2.5rem to 2.625rem */
    text-align: center;
    font-size: 0.945rem; /* 5% larger: 0.9rem to 0.945rem */
    color: #6c757d;
  }

  .form-footer p {
    margin: 0.525rem 0; /* 5% larger: 0.5rem to 0.525rem */
  }

  .social-proof {
    background-color: white;
    padding: 6.3rem 0; /* 5% larger: 6rem to 6.3rem */
    text-align: center;
  }

  .social-proof h2 {
    font-size: 2.625rem; /* 5% larger: 2.5rem to 2.625rem */
    margin-bottom: 4.2rem; /* 5% larger: 4rem to 4.2rem */
    color: var(--text-dark);
  }

  .testimonial-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 3.15rem; /* 5% larger: 3rem to 3.15rem */
    max-width: 1000px;
    margin: 0 auto;
  }

  .testimonial {
    background: var(--bg-light);
    padding: 2.625rem; /* 5% larger: 2.5rem to 2.625rem */
    border-radius: 12.6px; /* 5% larger: 12px to 12.6px */
    text-align: left;
  }

  .testimonial p {
    font-size: 1.26rem; /* 5% larger: 1.2rem to 1.26rem */
    color: var(--text-dark);
    line-height: 1.6;
    margin-bottom: 1.575rem; /* 5% larger: 1.5rem to 1.575rem */
    font-style: italic;
  }

  .testimonial-author strong {
    display: block;
    color: var(--text-dark);
    font-size: 1.155rem; /* 5% larger: 1.1rem to 1.155rem */
  }

  .testimonial-author span {
    color: #6c757d;
    font-size: 1.05rem; /* 5% larger: 1rem to 1.05rem */
  }

  .support-section {
    background: white;
    padding: 4rem 0;
    text-align: center;
  }

  .support-section h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 3rem;
    color: var(--text-dark);
  }

  .support-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .support-card {
    background: var(--bg-light);
    padding: 2.5rem;
    border-radius: 12px;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .support-card:hover {
    transform: translateY(-5px);
  }

  .support-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .support-card h3 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-dark);
  }

  .support-card p {
    color: #6b7280;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .support-btn {
    display: inline-block;
    background: white;
    color: var(--text-dark);
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    border: 2px solid #e5e7eb;
    transition: all 0.3s ease;
  }

  .support-btn:hover {
    border-color: var(--accent-blue);
    color: var(--accent-blue);
  }

  .trust-section {
    background: var(--bg-light);
    padding: 4rem 0;
  }

  .trust-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .stat-item {
    text-align: center;
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-blue);
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 1rem;
    color: #6b7280;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .content-grid {
      grid-template-columns: 1fr;
      gap: 3.15rem; /* 5% larger: 3rem to 3.15rem */
    }

    .header-content h1 {
      font-size: 3.15rem; /* 5% larger: 3rem to 3.15rem */
    }

    .subtitle {
      font-size: 1.26rem; /* 5% larger: 1.2rem to 1.26rem */
    }

    .testimonial-grid {
      grid-template-columns: 1fr;
    }

    .support-cards {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm');
    const submitBtn = document.getElementById('submitBtn');
    const btnText = submitBtn.querySelector('.btn-text');
    const btnLoading = submitBtn.querySelector('.btn-loading');
    const formMessage = document.getElementById('formMessage');

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Show loading state
      submitBtn.disabled = true;
      btnText.style.display = 'none';
      btnLoading.style.display = 'inline';
      formMessage.style.display = 'none';
      
      try {
        const formData = new FormData(form);
        
        const response = await fetch('/api/contact', {
          method: 'POST',
          body: formData
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Show success message
          formMessage.textContent = result.message;
          formMessage.className = 'form-message success';
          formMessage.style.display = 'block';
          
          // Reset form
          form.reset();
          
          // Scroll to message
          formMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
        } else {
          // Show error message
          formMessage.textContent = result.message;
          formMessage.className = 'form-message error';
          formMessage.style.display = 'block';
        }
        
      } catch (error) {
        console.error('Form submission error:', error);
        
        // Show error message
        formMessage.textContent = 'Something went wrong. Please try again or contact us directly.';
        formMessage.className = 'form-message error';
        formMessage.style.display = 'block';
      } finally {
        // Reset button state
        submitBtn.disabled = false;
        btnText.style.display = 'inline';
        btnLoading.style.display = 'none';
      }
    });
  });
</script>
