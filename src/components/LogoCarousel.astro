---
// Logo Carousel component for client social proof
---

<section class="logo-carousel">
  <div class="carousel-container">
    <div class="logos-wrapper">
      <div class="logos-track">
        <div class="logo-item">
          <img src="/lgc1.webp" alt="Client Logo 1" class="logo-image">
        </div>
        <div class="logo-item">
          <img src="/lgc2.webp" alt="Client Logo 2" class="logo-image">
        </div>
        <div class="logo-item">
          <img src="/lgc3.webp" alt="Client Logo 3" class="logo-image">
        </div>
        <div class="logo-item">
          <img src="/lgc4.webp" alt="Client Logo 4" class="logo-image">
        </div>
        <div class="logo-item">
          <img src="/lgc5.webp" alt="Client Logo 5" class="logo-image">
        </div>
        <div class="logo-item">
          <img src="/lgc6.webp" alt="Client Logo 6" class="logo-image">
        </div>
        <div class="logo-item">
          <img src="/lgc7.webp" alt="Client Logo 7" class="logo-image">
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const track = document.querySelector('.logos-track');
    let currentPosition = 0;
    const logoWidth = 550; // Width of each logo item
    const gap = 96; // 6rem gap in pixels
    const totalWidth = logoWidth + gap;
    const maxScroll = (7 - 4) * totalWidth; // Show 4 logos, scroll through 7
    
    function scrollLogos() {
      currentPosition += totalWidth;
      if (currentPosition > maxScroll) {
        currentPosition = 0;
      }
      
      if (track instanceof HTMLElement) {
        track.style.transform = `translateX(-${currentPosition}px)`;
      }
    }
    
    // Auto-scroll every 3 seconds
    setInterval(scrollLogos, 3000);
  });
</script>

<style>
  .logo-carousel {
    position: relative;
    z-index: 5;
    margin: 2rem 0;
    padding: 0.5rem 0;
  }

  .carousel-container {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 1800px;
    margin: 0 auto;
    padding: 0 2rem;
  }



  .logos-wrapper {
    overflow: hidden;
    width: 2200px;
  }

  .logos-track {
    display: flex;
    gap: 6rem;
    transition: transform 3s ease-in-out;
  }

  .logo-item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 550px;
    height: 80px;
  }

  .logo-image {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    opacity: 0.7;
    transition: opacity 0.3s ease;
    filter: grayscale(100%);
  }

  .logo-item:hover .logo-image {
    opacity: 1;
    filter: grayscale(0%);
  }



  /* Responsive Design */
  @media (max-width: 768px) {
    .logo-carousel {
      margin: 0;
      padding: 0.5rem 0;
    }

    .carousel-container {
      padding: 0 1rem;
    }

    .logos-wrapper {
      width: 600px;
    }

    .logo-item {
      min-width: 150px;
      height: 40px;
    }

    .logo-text {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .logos-wrapper {
      width: 400px;
    }

    .logo-item {
      min-width: 200px;
      height: 60px;
    }
  }
</style>
