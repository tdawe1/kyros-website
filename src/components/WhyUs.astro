<style>
  .why-us {
    background: 
      linear-gradient(135deg, var(--bg-light) 0%, #F0F8FF 100%),
      radial-gradient(circle at 20% 80%, rgba(0, 123, 255, 0.02) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(0, 86, 179, 0.02) 0%, transparent 50%);
    background-size: 100% 100%, 300px 300px, 300px 300px;
    padding: 126px 0;
    position: relative;
    overflow: hidden;
  }

  .why-us h2 {
    font-size: clamp(2.625rem, 5.25vw, 4.725rem);
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 2.625rem;
    line-height: 1.2;
    text-align: left;
  }

  .section-description {
    font-size: clamp(1.26rem, 2.625vw, 1.575rem);
    line-height: 1.6;
    color: var(--text-dark);
    margin-bottom: 4.2rem;
    max-width: 840px;
    text-align: left;
  }

  .value-props-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.625rem;
    position: relative;
    z-index: 2;
  }

  .value-prop {
    background: white;
    padding: 2.625rem;
    border-radius: 12.6px;
    box-shadow: 0 4.2px 21px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .value-prop::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--accent-blue), var(--electric-blue-dark));
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .value-prop:hover::before {
    transform: scaleX(1);
  }

  .value-prop:hover {
    transform: translateY(-10.5px);
    box-shadow: 0 8.4px 31.5px rgba(0, 0, 0, 0.15);
  }

  .icon-placeholder {
    width: 63px;
    height: 63px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent-orange), var(--accent-purple));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 31.5px;
    margin-bottom: 1.575rem;
    color: white;
    transition: transform 0.3s ease;
  }

  .value-prop:hover .icon-placeholder {
    transform: scale(1.1);
  }

  .value-prop h3 {
    font-size: clamp(1.26rem, 2.625vw, 1.575rem);
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1.575rem;
    line-height: 1.3;
  }

  .value-prop p {
    font-size: clamp(1.05rem, 2.1vw, 1.26rem);
    line-height: 1.5;
    color: var(--text-dark);
    margin: 0;
  }

  /* Background pattern elements */
  .bg-patterns {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;
  }

  .pattern-dot {
    position: absolute;
    width: 8px;
    height: 8px;
    background: rgba(0, 123, 255, 0.1);
    border-radius: 50%;
    animation: pulse 4s ease-in-out infinite;
  }

  .dot-1 {
    top: 15%;
    left: 10%;
    animation-delay: 0s;
  }

  .dot-2 {
    top: 25%;
    right: 15%;
    animation-delay: 1s;
  }

  .dot-3 {
    bottom: 20%;
    left: 20%;
    animation-delay: 2s;
  }

  .dot-4 {
    bottom: 30%;
    right: 10%;
    animation-delay: 3s;
  }

  .pattern-line {
    position: absolute;
    background: linear-gradient(90deg, transparent, rgba(0, 123, 255, 0.05), transparent);
    animation: shimmer 6s ease-in-out infinite;
  }

  .bg-line-1 {
    width: 200px;
    height: 1px;
    top: 40%;
    left: -100px;
    animation-delay: 0s;
  }

  .bg-line-2 {
    width: 150px;
    height: 1px;
    bottom: 40%;
    right: -75px;
    animation-delay: 3s;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.2); }
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100vw); }
  }

  @media (max-width: 768px) {
    .value-props-grid {
      grid-template-columns: 1fr;
      gap: 2.1rem;
    }

    .value-prop {
      padding: 2.1rem;
    }

    .bg-line-1, .bg-line-2 {
      display: none;
    }
  }

  @media (min-width: 1920px) {
    .value-prop {
      padding: 3.15rem;
    }

    .icon-placeholder {
      width: 78.75px;
      height: 78.75px;
      font-size: 39.375px;
    }
  }
</style>
