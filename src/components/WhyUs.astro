<style>
  .why-us {
    background-color: var(--bg-light);
    padding: 40px 0;
  }

  .why-us h2 {
    font-size: clamp(2.625rem, 5.25vw, 4.725rem);
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 2.625rem;
    line-height: 1.2;
    text-align: left;
  }

  .section-description {
    font-size: clamp(1.26rem, 2.625vw, 1.575rem);
    line-height: 1.6;
    color: var(--text-dark);
    margin-bottom: 4.2rem;
    max-width: 840px;
    text-align: left;
  }

  .value-props-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.625rem;
  }

  .value-prop {
    background: white;
    padding: 2.625rem;
    border-radius: 12.6px;
    box-shadow: 0 4.2px 21px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .value-prop:hover {
    transform: translateY(-10.5px);
    box-shadow: 0 8.4px 31.5px rgba(0, 0, 0, 0.15);
  }

  .icon-placeholder {
    width: 63px;
    height: 63px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent-orange), var(--accent-purple));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 31.5px;
    margin-bottom: 1.575rem;
    color: white;
  }

  .value-prop h3 {
    font-size: clamp(1.26rem, 2.625vw, 1.575rem);
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1.575rem;
    line-height: 1.3;
  }

  .value-prop p {
    font-size: clamp(1.05rem, 2.1vw, 1.26rem);
    line-height: 1.5;
    color: var(--text-dark);
    margin: 0;
  }

  @media (max-width: 768px) {
    .value-props-grid {
      grid-template-columns: 1fr;
      gap: 2.1rem;
    }

    .value-prop {
      padding: 2.1rem;
    }
  }

  @media (min-width: 1920px) {
    .value-prop {
      padding: 3.15rem;
    }

    .icon-placeholder {
      width: 78.75px;
      height: 78.75px;
      font-size: 39.375px;
    }
  }
</style>
