<style>
  .why-us {
    background-color: var(--bg-light);
    padding: 126px 0;
  }

  .why-us-layout {
    position: relative;
    min-height: 800px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 63px 0;
  }

  .why-us-text {
    text-align: center;
    max-width: 840px;
    z-index: 2;
    position: relative;
  }

  .why-us-text h2 {
    font-size: clamp(2.625rem, 5.25vw, 4.725rem);
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 2.625rem;
    line-height: 1.2;
  }

  .section-description {
    font-size: clamp(1.26rem, 2.625vw, 1.575rem);
    line-height: 1.6;
    color: var(--text-dark);
    margin-bottom: 0;
  }

  .value-props-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .value-prop {
    position: absolute;
    background: white;
    padding: 2.1rem;
    border-radius: 12.6px;
    box-shadow: 0 4.2px 21px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    width: 250px;
    max-width: 250px;
    pointer-events: auto;
  }

  .value-prop:hover {
    transform: translateY(-10.5px);
    box-shadow: 0 8.4px 31.5px rgba(0, 0, 0, 0.15);
  }

  .icon-placeholder {
    width: 63px;
    height: 63px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent-orange), var(--accent-purple));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 31.5px;
    margin-bottom: 1.575rem;
    color: white;
  }

  .value-prop h3 {
    font-size: clamp(1.26rem, 2.625vw, 1.575rem);
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1.575rem;
    line-height: 1.3;
  }

  .value-prop p {
    font-size: clamp(1.05rem, 2.1vw, 1.26rem);
    line-height: 1.5;
    color: var(--text-dark);
    margin: 0;
  }

  .value-prop.top-left {
    top: 15%;
    left: 15%;
  }

  .value-prop.top-right {
    top: 15%;
    right: 15%;
  }

  .value-prop.bottom-left {
    bottom: 15%;
    left: 15%;
  }

  .value-prop.bottom-right {
    bottom: 15%;
    right: 15%;
  }

  @media (max-width: 768px) {
    .why-us-layout {
      min-height: auto;
      padding: 63px 0;
    }

    .value-prop {
      position: static;
      width: 100%;
      max-width: none;
      margin-bottom: 2.625rem;
    }

    .value-props-container {
      position: static;
      margin-top: 3.15rem;
      display: grid;
      grid-template-columns: 1fr;
      gap: 2.625rem;
    }

    .why-us-text {
      margin-bottom: 3.15rem;
      background: transparent;
      padding: 0;
      box-shadow: none;
    }
  }

  @media (min-width: 1920px) {
    .why-us-layout {
      min-height: 1000px;
    }

    .value-prop {
      width: 350px;
      max-width: 350px;
      padding: 3.15rem;
    }

    .icon-placeholder {
      width: 78.75px;
      height: 78.75px;
      font-size: 39.375px;
    }
  }
</style>
